<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:padding="16dp">

    <!-- Khung nền số -->
    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/rowButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Hàng nút màu -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowColors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/rowButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewNumber">

        <!-- Nút màu xanh -->
        <Button
            android:id="@+id/btnColorBlue"
            style="@style/AppButton"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="Blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nút màu đỏ -->
        <Button
            android:id="@+id/btnColorRed"
            style="@style/AppButton"
            android:backgroundTint="@android:color/holo_red_light"
            android:text="Red"
            app:layout_constraintStart_toEndOf="@id/btnColorBlue"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nút màu tím -->
        <Button
            android:id="@+id/btnColorPurple"
            style="@style/AppButton"
            android:backgroundTint="@android:color/holo_purple"
            android:text="Purple"
            app:layout_constraintStart_toEndOf="@id/btnColorRed"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nút màu vàng -->
        <Button
            android:id="@+id/btnColorYellow"
            style="@style/AppButton"
            android:backgroundTint="@android:color/holo_orange_light"
            android:text="Yellow"
            app:layout_constraintStart_toEndOf="@id/btnColorPurple"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Hàng nút count và reset -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Nút count -->
        <Button
            android:id="@+id/btnCount"
            style="@style/AppButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Count"
            app:layout_constraintEnd_toStartOf="@id/btnReset"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nút reset -->
        <Button
            android:id="@+id/btnReset"
            style="@style/AppButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/btnCount"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
